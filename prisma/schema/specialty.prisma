model Speciality {
    id          String   @id @default(ulid())
    title       String   @unique @db.VarChar(100)
    description String?  @db.Text
    icon        String?  @db.VarChar(255)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    isDeleted          Boolean            @default(false)
    deatedAt           DateTime?
    doctorSpecialities DoctorSpeciality[]

    @@index([isDeleted], name: "idx_speciality_is_deleted")
    @@index([title], name: "idx_speciality_title")
    @@map("specialities")
}

model DoctorSpeciality {
    id           String @id @default(uuid(7))
    doctorId     String
    specialityId String

    doctor     Doctor     @relation(fields: [doctorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    speciality Speciality @relation(fields: [specialityId], references: [id])

    @@unique([doctorId, specialityId])
    @@index([doctorId], name: "idx_doctor_speciality_doctor_id")
    @@index([specialityId], name: "idx_doctor_speciality_speciality_id")
    @@map("doctor_specialities")
}
